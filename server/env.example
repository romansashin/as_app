# Environment
NODE_ENV=development
PORT=4000

# Session
SESSION_SECRET=change-me-in-production-generate-a-random-secret-key

# OAuth (опционально - если не указаны, работает DEV режим без авторизации)
# Google OAuth: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Yandex OAuth: https://oauth.yandex.ru/
YANDEX_CLIENT_ID=your-yandex-client-id
YANDEX_CLIENT_SECRET=your-yandex-client-secret

# Backend URL (для OAuth callbacks)
BACKEND_URL=http://localhost:4000

# Frontend URL (для CORS и редиректов после авторизации)
FRONTEND_URL=http://localhost:5173

